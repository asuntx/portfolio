---
import { getLangFromURl, useTranslations } from "../i18n/utils";
import HomeIcon from "./icons/HomeIcon.astro";
import ProjectIcon from "./icons/ProjectIcon.astro";
import ContactIcon from "./icons/ContactIcon.astro";
import ResumeIcon from "./icons/ResumeIcon.astro";
const { resumeFile, hire, language, pageLanguage, padding } = Astro.props;
const lang = getLangFromURl(Astro.url);
const t = useTranslations(lang);
---

<header
  class="header fixed z-30 py-6 sm:px-4 lg:px-8 max-w-3xl left-1/2 -translate-x-1/2"
>
  <div class="flex justify-between px-3 sm:px-0 items-center">
    <nav class="flex w-full gap-3 sm:gap-6 lg:gap-9">
      <a
        class="group/link1 font-semibold hover:text-text transition-colors duration-150 ease-in-out"
        href="#home"
        aria-label={t("homeLabel")}
      >
        <HomeIcon />
      </a>
      <a
        class="group/link2 font-semibold hover:text-text transition-colors duration-150 ease-in-out"
        href="#projects"
        aria-label={t("projectsLabel")}
      >
        <ProjectIcon />
      </a>
      <a
        class="group/link3 font-semibold hover:text-text transition-colors duration-150 ease-in-out"
        href="#contact"
        aria-label={t("contactLabel")}
      >
        <ContactIcon />
      </a>
    </nav>

    <div class="flex gap-1.5 sm:gap-2 lg:gap-3">
      <a
        href={resumeFile}
        target="_blank"
        rel="noopener noreferrer"
        class="py-1.5 flex items-center gap-1.5 px-2 sm:px-3 border hover:border-accent transition-all duration-150 ease-in-out rounded-lg"
      >
        <ResumeIcon />
        <span class="font-bold text-sm sm:text-base">CV</span>
      </a>
      <a
        class=`animate-color py-1.5 ${padding} sm:px-3 border hover:border-accent transition-all duration-150 ease-in-out rounded-lg`
        href="https://www.linkedin.com/in/sebasti%C3%A1n-figueroa-barco-649981261/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <span class="animate-text-color text-sm sm:text-base font-bold"
          >{hire}</span
        >
      </a>
      <a
        href={pageLanguage}
        class="font-bold text-center flex justify-center items-center"
        >{language}</a
      >
    </div>
  </div>
</header>

<style>
  .header {
    background: rgba(5, 4, 1, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }
</style>
