---
import { getLangFromURl, useTranslations } from "../i18n/utils";
import GithubIcon from "./icons/GithubIcon.astro";
import LinkedinIcon from "./icons/LinkedinIcon.astro";
import EmailIcon from "./icons/EmailIcon.astro";
import ResumeIcon from "./icons/ResumeIcon.astro";
const lang = getLangFromURl(Astro.url);
const t = useTranslations(lang);
const { resume, resumeFile } = Astro.props;
---

<div
  class="mt-5 px-2 sm:px-4 flex flex-wrap justify-center w-full gap-1.5 sm:gap-3"
>
  <a
    class="hover:bg-stone-800 transition-colors duration-150 ease-in-out flex items-center justify-center px-4 py-2 rounded-lg bg-stone-900"
    href="http://github.com/asuntx"
    aria-label={t("githubLabel")}
    target="_blank"
    rel="noopener noreferrer"
  >
    <GithubIcon />
  </a>
  <a
    class="hover:bg-stone-800 transition-colors duration-150 ease-in-out flex items-center justify-center px-4 py-2 rounded-lg bg-stone-900"
    href="https://www.linkedin.com/in/figueroasebasda/"
    aria-label={t("linkedinLabel")}
    target="_blank"
    rel="noopener noreferrer"
  >
    <LinkedinIcon />
  </a>
  <a
    href="mailto:sebaj348@gmail.com"
    aria-label={t("mailLabel")}
    target="_blank"
    rel="noopener noreferrer"
    class="hover:bg-stone-800 transition-colors duration-150 ease-in-out flex items-center justify-center gap-2 px-4 py-2 rounded-lg bg-stone-900"
  >
    <EmailIcon />
  </a>

  <a
    class="hover:bg-stone-800 transition-colors duration-150 ease-in-out flex gap-2 items-center justify-center px-4 py-2 rounded-lg bg-stone-900"
    href={resumeFile}
    aria-label={t("downloadLabel")}
    target="_blank"
    rel="noopener noreferrer"
  >
    <span class="font-bold">{resume}</span>
    <ResumeIcon />
  </a>
</div>
